horizontal begin seq
  gap 8
  begin par
    label_phys
    label_fire
    label_cold
    label_elec
    label_acid
    label_magic
  end
  begin par
    res_phys
    res_fire
    res_cold
    res_elec
    res_acid
    res_magic
  end
  gap 8
  begin par
    label_conf
    label_fear
    label_slow
    label_para
    label_poison
    label_blind
  end
  begin par
    res_conf
    res_fear
    res_slow
    res_para
    res_poison
    res_blind
  end
  gap 8
  begin par
    label_drain
    label_deplete
    label_death
    label_ghosthit
    label_turn_undead
    label_holy_word
  end
